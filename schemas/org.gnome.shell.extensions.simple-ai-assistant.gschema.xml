<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.simple-ai-assistant" path="/org/gnome/shell/extensions/simple-ai-assistant/">
    <key name="api-provider" type="s">
      <default>'openai'</default>
      <summary>API Provider</summary>
    </key>
    <key name="openai-api-key" type="s">
      <default>''</default>
    </key>
    <key name="gemini-api-key" type="s">
      <default>''</default>
    </key>
    <key name="openai-model" type="s">
      <default>'gpt-5-mini'</default>
    </key>
    <key name="gemini-model" type="s">
      <default>'gemini-2.5-flash'</default>
    </key>
    <key name="send-device-info" type="b">
      <default>true</default>
    </key>
    <key name="theme" type="s">
      <default>'system'</default>
    </key>
    <key name="history-limit" type="i">
      <default>30</default>
      <summary>History Limit</summary>
      <description>Maximum number of messages (user + assistant) to keep in context.</description>
    </key>
  </schema>
</schemalist>
